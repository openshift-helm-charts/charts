{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jamaibase Helm Chart Values",
  "description": "Schema for Jamaibase Helm chart values.yaml file",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "default": "jamaibase"
        },
        "imageRegistry": {
          "type": "string",
          "default": "ghcr.io/embeddedllm"
        },
        "imagePullSecret": {
          "type": "string"
        },
        "storageClass": {
          "type": "string"
        },
        "labels": {
          "type": "object"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "jamaibase": {
      "type": "object",
      "properties": {
        "owl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                },
                "pullPolicy": {
                  "type": "string",
                  "enum": ["Always", "IfNotPresent", "Never"]
                }
              }
            },
            "service": {
              "type": "object",
              "properties": {
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                }
              }
            }
          }
        },
        "jambu": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                },
                "pullPolicy": {
                  "type": "string",
                  "enum": ["Always", "IfNotPresent", "Never"]
                }
              }
            },
            "service": {
              "type": "object",
              "properties": {
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                }
              }
            }
          }
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "clickhouse": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "dragonfly": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "seaweedfs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "v8kopi": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "docling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "victoriaMetrics": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "openshift": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "route": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "host": {
              "type": "string"
            },
            "tls": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "termination": {
                  "type": "string"
                }
              }
            }
          }
        },
        "v8kopiRoutes": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "name": {
                  "type": "string"
                },
                "serviceName": {
                  "type": "string"
                },
                "servicePort": {
                  "type": "integer"
                },
                "host": {
                  "type": "string"
                }
              }
            },
            "workers": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "name": {
                  "type": "string"
                },
                "serviceName": {
                  "type": "string"
                },
                "servicePort": {
                  "type": "integer"
                },
                "host": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}
